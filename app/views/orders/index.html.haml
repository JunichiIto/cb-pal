#order-list
  .row-fluid
    .span6
      %h2 オーダー一覧
      = link_to '新規オーダー', new_order_path, class: 'btn new-order-btn'
      - @orders.each do |order|
        %table.table.table-bordered
          %tr
            %td
              = link_to edit_order_path(order) do
                = order.customer_name.blank? ? "(No name)" : order.customer_name
            %td= l order.created_at, format: :short
          - order.order_details.each do |detail|
            %tr
              %td= detail.bread.name
              %td= detail.quantity
      = link_to '新規オーダー', new_order_path, class: 'btn new-order-btn'
