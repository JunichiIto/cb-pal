#order-form
  .row-fluid
    .span6
      %h2 注文フォーム
      = simple_form_for @order do |f| 
        = f.error_notification
        .form-inputs
          = f.input :customer_name
        %table.table
          - Menu.all.each do |menu|
            %tr.name-row
              %td{colspan: 5}= menu.bread.name
            %tr.quantity-row
              %td
                残
                %span.remaining= menu.remaining_bread_count
              %td= text_field_tag "order[bread_quantities][#{menu.bread.id}]", 0, class: 'order-quantity'
              %td= link_to '1.0', '#', class: 'btn inc-by-1'
              %td= link_to '0.5', '#', class: 'btn inc-by-0-5'
              %td= link_to '0', '#', class: 'btn btn-danger set-zero'
        .form-actions
          = f.submit class: 'btn btn-primary'
